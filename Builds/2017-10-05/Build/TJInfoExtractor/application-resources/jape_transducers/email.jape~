Phase:	Email
Input:  Token Lookup SpaceToken DotCom
Options: control = appelt


// Email rules

Rule:Emailaddress1
Priority: 50
(
 (
  {Token.kind == word}|
  {Token.kind == number}
 )+
 (
  {Token.string == "_"}
 )?
 (({Token.string == "."} | {DotCom.kind==dot}))?
  ({Token.kind == word}|
   {Token.kind == number}|
   {Token.string == "_"}
  )*
 
 {Token.string == "@"}		
 (
  {Token.kind == word}|
  {Token.kind == symbol}|
  {Token.kind == punctuation}|
  {Token.kind == number}
 )
 (({Token.string == "."} | {DotCom.kind==dot}))?
 (
  {Token.kind == word}|
  {Token.kind == symbol}|
  {Token.kind == punctuation}|
  {Token.kind == number}
 )*
 (({Token.string == "."} | {DotCom.kind==dot}))?
(
  {Token.kind == word}|
  {Token.kind == symbol}|
  {Token.kind == punctuation}|
  {Token.kind == number}
 )?
(({Token.string == "."} | {DotCom.kind==dot}))?
 (
  ({Token.string == "."} | {DotCom.kind==dot})		
  (
   {Token.kind == word}|
   {Token.kind == number}	
  )
  (({Token.string == "."} | {DotCom.kind==dot}))?
  (
   {Token.kind == word}|
   {Token.kind == number}	
  )?
  (({Token.string == "."} | {DotCom.kind==dot}))?
  (
   {Token.kind == word}|
   {Token.kind == number}	
  )?
 )
)
:emailAddress -->
  :emailAddress.Email= {kind = "emailAddress", rule = "Emailaddress1"}



